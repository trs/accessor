{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "lib": ["ES2021"],
    "outDir": "./dist/types",
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
