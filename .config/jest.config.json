{
  "rootDir": "..",
  "transform": {
    "^.+\\.(t|j)s?$": ["@swc/jest", {"configFile": ".config/swc.config.json"}]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}\\/.*)\\.js$": "$1",
    "^@\\/(.+)\\.js$": "<rootDir>/src/$1"
  },
  "testMatch": [
    "<rootDir>/src/**/*.test.ts"
  ],
  "testEnvironment": "node"
}
